<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>

  <parent>
    <groupId>org.bndly.ebx.client</groupId>
    <artifactId>org.bndly.ebx.standard-client</artifactId>
    <version>${revision}${changelist}</version>
    <relativePath>../pom.xml</relativePath>
  </parent>

  <artifactId>org.bndly.ebx.client.spring-context</artifactId>

  <name>Bndly ebx client spring-context</name>
  <description>A demo spring context for using the eBX REST API client</description>

  <properties>
    <!--used for sharing maven site resources. needs to be overridden by each maven module-->
    <maven.site.root>${project.basedir}/../../..</maven.site.root>
  </properties>

  <dependencies>
    <dependency>
      <groupId>org.bndly.common.rest</groupId>
      <artifactId>org.bndly.common.rest.beans</artifactId>
    </dependency>
    <dependency>
      <groupId>org.bndly.common.rest</groupId>
      <artifactId>org.bndly.common.rest.client-api</artifactId>
    </dependency>
    <dependency>
      <groupId>org.bndly.common.rest</groupId>
      <artifactId>org.bndly.common.rest.schema-resource-beans</artifactId>
    </dependency>
    <dependency>
      <groupId>org.bndly.common.service</groupId>
      <artifactId>org.bndly.common.service.model-api</artifactId>
    </dependency>
    <dependency>
      <groupId>org.bndly.common.service</groupId>
      <artifactId>org.bndly.common.service.shared-setup</artifactId>
    </dependency>
    <dependency>
      <groupId>org.bndly.common.ssl</groupId>
      <artifactId>org.bndly.common.ssl.ssl-api</artifactId>
    </dependency>
    <dependency>
      <groupId>org.bndly.common.ssl</groupId>
      <artifactId>org.bndly.common.ssl.ssl-httpclient</artifactId>
    </dependency>
    <dependency>
      <groupId>org.bndly.ebx</groupId>
      <artifactId>org.bndly.ebx.schema-rest-beans</artifactId>
    </dependency>
    <dependency>
      <groupId>org.bndly.ebx.client</groupId>
      <artifactId>org.bndly.ebx.client.generated-service</artifactId>
    </dependency>
    <dependency>
      <groupId>org.bndly.ebx.client</groupId>
      <artifactId>org.bndly.ebx.client.generated-service-api</artifactId>
    </dependency>
    <dependency>
      <groupId>org.slf4j</groupId>
      <artifactId>slf4j-api</artifactId>
      <scope>provided</scope>
    </dependency>
    <dependency>
      <groupId>com.sun.xml.bind</groupId>
      <artifactId>jaxb-core</artifactId>
      <scope>test</scope>
    </dependency>
    <dependency>
      <groupId>com.sun.xml.bind</groupId>
      <artifactId>jaxb-impl</artifactId>
      <scope>test</scope>
    </dependency>
    <dependency>
      <groupId>javax.activation</groupId>
      <artifactId>javax.activation-api</artifactId>
      <scope>test</scope>
    </dependency>
    <dependency>
      <groupId>org.bndly.common</groupId>
      <artifactId>org.bndly.common.reflection</artifactId>
      <scope>test</scope>
    </dependency>
    <dependency>
      <groupId>org.bndly.common.event</groupId>
      <artifactId>org.bndly.common.event.event-api</artifactId>
      <scope>test</scope>
    </dependency>
    <dependency>
      <groupId>org.bndly.common.event</groupId>
      <artifactId>org.bndly.common.event.event-impl</artifactId>
      <scope>test</scope>
    </dependency>
    <dependency>
      <groupId>org.bndly.common.graph</groupId>
      <artifactId>org.bndly.common.graph.graph-api</artifactId>
      <scope>test</scope>
    </dependency>
    <dependency>
      <groupId>org.bndly.common.graph</groupId>
      <artifactId>org.bndly.common.graph.graph-impl</artifactId>
      <scope>test</scope>
    </dependency>
    <dependency>
      <groupId>org.bndly.common.service</groupId>
      <artifactId>org.bndly.common.service.validation-rules-interpreter</artifactId>
      <scope>test</scope>
    </dependency>
    <dependency>
      <groupId>org.slf4j</groupId>
      <artifactId>slf4j-simple</artifactId>
      <scope>test</scope>
    </dependency>
    <dependency>
      <groupId>org.testng</groupId>
      <artifactId>testng</artifactId>
      <scope>test</scope>
    </dependency>
  </dependencies>

  <build>
    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-surefire-plugin</artifactId>
        <version>2.13</version>
        <configuration>
          <systemProperties>
            <property>
              <name>ssl.keyStoreLocation</name>
              <value>${basedir}/src/test/resources/ssl.keystore</value>
            </property>
            <property>
              <name>ssl.keyStorePassword</name>
              <value>${ssl.keyStorePassword}</value>
            </property>
            <property>
              <name>ssl.ignore.host</name>
              <value>${ssl.ignore.host}</value>
            </property>
            <property>
              <name>ebx.host.url</name>
              <value>http://localhost:8081/bndly</value>
            </property>
          </systemProperties>
        </configuration>
      </plugin>
      <plugin>
        <groupId>org.apache.felix</groupId>
        <artifactId>maven-bundle-plugin</artifactId>
      </plugin>
    </plugins>
  </build>
</project>
