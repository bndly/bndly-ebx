<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
                http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
                http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.0.xsd">

    <bean name="schemaDeploymentListeners" class="java.util.ArrayList" />
    
    <bean name="dataStore" class="org.bndly.common.data.FileSystemDataStoreImpl" init-method="init" >
        <property name="root" value="target/tmp" />
    </bean>
    
    <import resource="classpath:/META-INF/spring/validation-rules-context.xml"/>
    
    <context:component-scan base-package="org.bndly.ebx.validation">
    </context:component-scan>
    
</beans>
